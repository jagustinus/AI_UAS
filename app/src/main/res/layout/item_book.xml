<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="@color/colorWhite"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/book_img_book"
        android:layout_width="100dp"
        android:layout_height="132dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_person_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/book_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Judul Buku"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/book_img_book"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/book_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textFontWeight="300"
        android:textSize="12sp"
        android:text="By Someone"
        app:layout_constraintStart_toStartOf="@+id/book_item_title"
        app:layout_constraintTop_toBottomOf="@+id/book_item_title"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/book_item_page_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200 pages"
        android:textFontWeight="300"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/book_item_author"
        app:layout_constraintTop_toBottomOf="@+id/book_item_author"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/book_item_page_published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="| 2018"
        android:textFontWeight="300"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/book_item_page_count"
        app:layout_constraintTop_toBottomOf="@+id/book_item_author"
        android:layout_marginStart="8dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unavailable"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/book_item_page_count"
        app:layout_constraintTop_toBottomOf="@+id/book_item_page_count"
        android:layout_marginTop="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>